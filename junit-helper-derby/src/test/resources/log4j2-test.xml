<Configuration status="OFF" name="JUnit Helper Derby Tests" packages="org.deventropy.junithelper.derby">
	<Appenders>
		<Console name="STDOUT">
			<PatternLayout pattern="%d{ISO8601} %p [%t] %c{1.} %C{1}.%M %msg%n%ex" />
		</Console>
	</Appenders>

	<Loggers>
		<Root level="debug">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>
